<%= "<% div_for(#{goal.s}) do %%>" %>
<%= "<h3>#{goal.s}</h3>" %>
<% goal.fields.each do |k, v| %>
  <div>
    <b><%= k %>:</b>
    <%= "<%=h #{goal.s}.#{k} %%>" %>
  </div>
<% end %>
<%= "<% end %%>" %>
<%  goal.nested_resources.each do |k, v| %>
  
  <div>
    <%= "<h4>list of #{v.p}</h4>" %>
    <%=  "<%= render :partial => '#{v.p}/#{v.s}_small', :collection => #{goal.s}.#{v.p} %%>" %>
  </div>
  <div>
    <%=  "<h4>make a new #{v.s}</h4>" %>
    <%=  "<%= render :partial => '#{v.p}/form', :object => #{goal.s}.#{v.p}.new %%>" %>
  </div>
<% end %>
